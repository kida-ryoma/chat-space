.side-bar
  .user-name
    .top-items
      .top-items__name 
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons--edit
          = link_to new_group_path() do
            = icon("far", "edit")
        %li.top-items__icons--setting
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog")

  .group-list
    - current_user.groups.each do |group|
      .group-items
        = link_to "#", class: "group-item" do
          .group-item__name
            = group.name
          .group-item__message
            = group.show_last_message
