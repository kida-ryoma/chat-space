.chat-main
  .group-info
    .details
      .details__group-name
        = @group.name
      .details__group-member
        Member: 
        - @users.each do |user|
          = user.name
    .group-info__edit
      .edit-btn
        = link_to edit_group_path(@group.id) do
          EDIT

  .message-list
    = render @messages
        
  .message-form
    = form_with model: [@group, @message], class: "form", local: true do |f|
      .form__content
        = f.text_field :text, class: "form__content__text", placeholder: "type a message"
        = f.label :image, class: "form__content__img" do
          = icon('far', 'image', class: "form__icon")
          = f.file_field :image, class: "hidden"
      = f.submit "Send", class: "form__send"